<div class="row">
  <div class="col-md-12">

    <h2>Add Category</h2>

    <br />

    <form method="post" action="/categories/add">

      <label for="title">Category:</label>
      <input
        class="form-control"
        id="title"
        name="category"
        type="text"
        autofocus
      />

      <hr />

      <input
        type="submit"
        class="btn btn-pill btn-primary pull-right"
        value="Add Category"
      /><br /><br /><br />
    </form>
  </div>
</div>