{{#unless posts}}
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
{{/unless}}
<h2>Posts
  <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
<hr />
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Post ID</th>
        <th scope="col">Title</th>
        <th scope="col">Post Date</th>
        <th scope="col">Category</th>
        <th scope="col">Published</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each posts}}
        <tr>
          <td>{{id}}</td>
          <td class="postTitle">{{title}}</td>
          <td>{{postDate}}</td>
          <td><a href="/posts?category={{this.category}}">{{category}}</a></td>
          <td>{{published}}</td>
          <td><a
              href="posts/delete/{{id}}"
              class="btn btn-danger"
            >Remove</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>