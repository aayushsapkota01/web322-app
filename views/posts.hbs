<div class="row">
  <div class="col-md-12">
    <h2>All Posts</h2>
    <hr />
    {{#unless posts}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{else}}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Post ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Category</th>
              <th>Published</th>
            </tr>
          </thead>
          <tbody>
            {{#each posts}}
              <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.postDate}}</td>
                <td><a
                    href="/posts?category={{this.category}}"
                  >{{this.category}}</a></td>
                <td>{{this.published}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/unless}}
  </div>
</div>